<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/code_input_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login_RegisterPage.LoginPage.CodeInputActivity"
    android:background="@drawable/bg_gradient" >

    <TextView
        android:id="@+id/code_input_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Verification Code"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/code_input_field"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <TextView
        android:id="@+id/code_input_instructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please enter the 5-character code sent to your email"
        android:textColor="@color/gray"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/code_input_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/code_input_field"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="XXXXX"
        android:maxLength="5"
        android:inputType="text"
        android:textColor="@color/white"
        android:textColorHint="@color/gray"
        android:gravity="center"
        android:background="@drawable/button_background"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/code_input_instructions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="32dp"
        android:padding="10dp"/>

    <Button
        android:id="@+id/verify_code_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Verify Code"
        android:textColor="@color/white"
        android:backgroundTint="@color/custom_orange"
        android:padding="12dp"
        app:cornerRadius="16dp"
        app:layout_constraintTop_toBottomOf="@+id/code_input_field"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="32dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
