<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    tools:context=".Home_LandingPage.Workouts.Exercises_All"
    tools:ignore="HardcodedText">

    <TextView
        android:id="@+id/workout_txt"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/konkhmer_sleokchher"
        android:text="Exercises"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/FEPAddExercise"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/FEPAddExercise"
        android:layout_width="329dp"
        android:layout_height="60dp"
        android:backgroundTint="#000000"
        android:includeFontPadding="false"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:text="Add Exercise"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="17sp"
        app:cornerRadius="20dp"
        app:icon="@drawable/plus_icon"
        app:iconTint="#DE612B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.208"
        app:strokeColor="#DE612B"
        app:strokeWidth="1dp" />

    <TextView
        android:id="@+id/textView38"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:lineHeight="13sp"
        android:text="Select an Exercise you wish to add to your workout"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/workout_txt"
        app:layout_constraintVertical_bias="0.132" />

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="550dp"
        android:background="@drawable/bg_blackgradient"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView38"
        app:layout_constraintVertical_bias="0.474">

        <TextView
            android:id="@+id/textView41"
            android:layout_width="wrap_content"
            android:layout_height="58dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:text="Exercises:"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView42"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="-25dp"
            android:text="A-Z Exercises:"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <ScrollView
            android:id="@+id/scrollView"

            android:layout_width="340dp"
            android:layout_height="457dp"
            android:layout_marginStart="22dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="52dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="350dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:background="@drawable/workout_bg_gray"
                    android:orientation="horizontal"
                    android:padding="16dp">


                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        app:cardBackgroundColor="#D9D9D9"
                        app:cardCornerRadius="100pt">


                        <ImageView
                            android:id="@+id/bench_press_icon"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:src="@drawable/bench_press_icon" />
                    </androidx.cardview.widget.CardView>


                    <TextView
                        android:id="@+id/bench_press_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="23dp"
                        android:layout_toRightOf="@id/cardView1"
                        android:fontFamily="@font/konkhmer_sleokchher"
                        android:gravity="center"
                        android:text="Bench Press"
                        android:textColor="@color/white"
                        android:textSize="17sp" />


                    <TextView
                        android:id="@+id/bpress_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/bench_press_txt"
                        android:layout_toRightOf="@+id/cardView1"
                        android:fontFamily="@font/konkhmer_sleokchher"
                        android:text="Chest"
                        android:textColor="@color/white"
                        android:textSize="9sp" />


                    <ImageButton
                        android:id="@+id/addItemBtn1"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="end"
                        android:background="@null"
                        android:src="@drawable/additem"
                        tools:layout_editor_absoluteX="274dp"
                        tools:layout_editor_absoluteY="16dp" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="350dp"
                    android:layout_height="69dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/workout_bg_gray"
                    android:orientation="horizontal"
                    android:padding="16dp">


                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView2"
                        android:layout_width="40dp"
                        android:layout_height="80dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        app:cardBackgroundColor="#D9D9D9"
                        app:cardCornerRadius="100pt">


                        <ImageView
                            android:id="@+id/treadmill_icon"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:src="@drawable/treadmill_icon" />
                    </androidx.cardview.widget.CardView>


                    <TextView
                        android:id="@+id/treadmill_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="23dp"
                        android:layout_toRightOf="@id/cardView2"
                        android:gravity="center"
                        android:text="Treadmill"
                        android:textColor="@color/white"
                        android:textSize="17sp" />


                    <TextView
                        android:id="@+id/treadmill_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/treadmill_txt"
                        android:layout_toRightOf="@+id/cardView2"
                        android:text="Cardio"
                        android:textColor="@color/white"
                        android:textSize="9sp" />


                    <ImageButton
                        android:id="@+id/addItemBtn2"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="end"
                        android:background="@null"
                        android:src="@drawable/additem"
                        tools:layout_editor_absoluteX="274dp"
                        tools:layout_editor_absoluteY="16dp" />


                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="350dp"
                    android:layout_height="69dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/workout_bg_gray"
                    android:orientation="horizontal"
                    android:padding="16dp">


                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView3"
                        android:layout_width="40dp"
                        android:layout_height="80dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        app:cardBackgroundColor="#D9D9D9"
                        app:cardCornerRadius="100pt">


                        <ImageView
                            android:id="@+id/deadlift_icon"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:src="@drawable/deadlift_icon" />
                    </androidx.cardview.widget.CardView>


                    <TextView
                        android:id="@+id/deadlift_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="23dp"
                        android:layout_toRightOf="@id/cardView3"
                        android:gravity="center"
                        android:text="Deadlift"
                        android:textColor="@color/white"
                        android:textSize="17sp" />


                    <TextView
                        android:id="@+id/deadlift_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/deadlift_txt"
                        android:layout_toRightOf="@+id/cardView3"
                        android:text="Lower back, Hamstrings"
                        android:textColor="@color/white"
                        android:textSize="9sp" />


                    <ImageButton
                        android:id="@+id/addItemBtn3"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="end"
                        android:background="@null"
                        android:src="@drawable/additem"
                        tools:layout_editor_absoluteX="274dp"
                        tools:layout_editor_absoluteY="16dp" />


                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="350dp"
                    android:layout_height="69dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/workout_bg_gray"
                    android:orientation="horizontal"
                    android:padding="16dp">


                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView4"
                        android:layout_width="40dp"
                        android:layout_height="80dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        app:cardBackgroundColor="#D9D9D9"
                        app:cardCornerRadius="100pt">


                        <ImageView
                            android:id="@+id/plank_icon"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:src="@drawable/plank_icon" />
                    </androidx.cardview.widget.CardView>


                    <TextView
                        android:id="@+id/plank_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="23dp"
                        android:layout_toRightOf="@id/cardView4"
                        android:gravity="center"
                        android:text="Plank"
                        android:textColor="@color/white"
                        android:textSize="17sp" />


                    <TextView
                        android:id="@+id/plank_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/plank_txt"
                        android:layout_toRightOf="@+id/cardView4"
                        android:text="Core"
                        android:textColor="@color/white"
                        android:textSize="9sp" />


                    <ImageButton
                        android:id="@+id/addItemBtn4"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="end"
                        android:background="@null"
                        android:src="@drawable/additem"
                        tools:layout_editor_absoluteX="274dp"
                        tools:layout_editor_absoluteY="16dp" />


                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="350dp"
                    android:layout_height="69dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/workout_bg_gray"
                    android:orientation="horizontal"
                    android:padding="16dp">


                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView5"
                        android:layout_width="40dp"
                        android:layout_height="80dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        app:cardBackgroundColor="#D9D9D9"
                        app:cardCornerRadius="100pt">


                        <ImageView
                            android:id="@+id/pullup_icon"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:src="@drawable/pullup_icon" />
                    </androidx.cardview.widget.CardView>


                    <TextView
                        android:id="@+id/pullup_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="23dp"
                        android:layout_toRightOf="@id/cardView5"
                        android:gravity="center"
                        android:text="Pull ups"
                        android:textColor="@color/white"
                        android:textSize="17sp" />


                    <TextView
                        android:id="@+id/pullup_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/pullup_txt"
                        android:layout_toRightOf="@+id/cardView5"
                        android:text="Upper Body"
                        android:textColor="@color/white"
                        android:textSize="9sp" />


                    <ImageButton
                        android:id="@+id/addItemBtn5"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="end"
                        android:background="@null"
                        android:src="@drawable/additem"
                        tools:layout_editor_absoluteX="274dp"
                        tools:layout_editor_absoluteY="16dp" />


                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="350dp"
                    android:layout_height="69dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/workout_bg_gray"
                    android:orientation="horizontal"
                    android:padding="16dp">


                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView7"
                        android:layout_width="40dp"
                        android:layout_height="80dp"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        app:cardBackgroundColor="#D9D9D9"
                        app:cardCornerRadius="100pt">


                        <ImageView
                            android:id="@+id/bicepcurls_icon"
                            android:layout_width="match_parent"
                            android:layout_height="37dp"
                            android:layout_gravity="center"
                            android:src="@drawable/bicepcurls_icon" />
                    </androidx.cardview.widget.CardView>


                    <TextView
                        android:id="@+id/bicepcurls_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="23dp"
                        android:layout_toRightOf="@id/cardView7"
                        android:gravity="center"
                        android:text="Bicep Curls"
                        android:textColor="@color/white"
                        android:textSize="17sp" />


                    <TextView
                        android:id="@+id/bicepcurls_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/bicepcurls_txt"
                        android:layout_toRightOf="@+id/cardView7"
                        android:text="Upper arm"
                        android:textColor="@color/white"
                        android:textSize="9sp" />


                    <ImageButton
                        android:id="@+id/addItemBtn6"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="end"
                        android:background="@null"
                        android:src="@drawable/additem"
                        tools:layout_editor_absoluteX="274dp"
                        tools:layout_editor_absoluteY="16dp" />
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <ImageButton
        android:id="@+id/addItemBtn"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_gravity="end"
        android:background="@null"
        android:src="@drawable/additem"
        android:visibility="gone" />
</androidx.constraintlayout.widget.ConstraintLayout>
