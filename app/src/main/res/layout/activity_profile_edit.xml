<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home_LandingPage.Profile.ProfileEditActivity"
    android:background="@drawable/bg_gradient">


    <TextView
        android:id="@+id/back_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textColor="#DE612B"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.107"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.069" />


    <TextView
        android:id="@+id/save_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:textColor="#DE612B"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.914"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.069" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="119dp"
        android:layout_height="112dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.182"
        app:srcCompat="@drawable/baseline_person_24" />

    <TextView
        android:id="@+id/edit_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Profile"
        android:textColor="#DE612B"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.519"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.116" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="526dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView7">




        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:isScrollContainer="true"
            android:orientation="vertical"
            android:scrollbars="none"
            android:verticalScrollbarPosition="defaultPosition"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.354"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="276dp">


            <TextView
                android:id="@+id/textView35"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1sp"
                android:fontFamily="@font/konkhmer_sleokchher"
                android:text="First Name"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />


            <EditText
                android:id="@+id/edit_firstname"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="10sp"
                android:background="@drawable/button_background"
                android:ems="10"
                android:fontFamily="@font/konkhmer_sleokchher"
                android:hint="First Name"
                android:inputType="text"
                android:textColor="@color/white"
                android:paddingLeft="20sp"
                android:paddingTop="5sp"
                android:paddingBottom="5sp"
                android:textColorHint="#FDFDFD" />

            <TextView
                android:id="@+id/textView28"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Last Name"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />


            <EditText
                android:id="@+id/edit_lastname"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="10sp"
                android:background="@drawable/button_background"
                android:ems="10"
                android:hint="Last Name"
                android:textColor="@color/white"
                android:inputType="text"
                android:paddingLeft="20sp"
                android:paddingTop="5sp"
                android:paddingBottom="5sp"
                android:textColorHint="#FDFDFD" />


            <TextView
                android:id="@+id/textView38"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date of Birth"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/editTextText6"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="10sp"
                android:background="@drawable/button_background"
                android:drawableLeft="@drawable/calendar_icon"
                android:drawablePadding="10sp"
                android:ems="10"
                android:hint="Pick a date"
                android:inputType="text"
                android:paddingLeft="20sp"
                android:paddingTop="5sp"
                android:paddingBottom="5sp"
                android:textColor="#FFFFFF"
                android:textColorHint="#FDFDFD" />


            <TextView
                android:id="@+id/textView23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/konkhmer_sleokchher"
                android:text="Gender"
                android:textColor="#FBFBFB"
                android:textColorLink="#FFFFFF"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.132"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView24" />


            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.509"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView23">


                <RadioButton
                    android:id="@+id/radioButton6"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:layout_marginRight="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_background"
                    android:buttonTint="#1F1F1F"
                    android:paddingRight="30dp"
                    android:text="Male"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF" />


                <RadioButton
                    android:id="@+id/radioButton7"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"


                    android:layout_marginLeft="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_background"
                    android:buttonTint="#1F1F1F"
                    android:paddingRight="30dp"
                    android:text="Female"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF" />
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingTop="10dp"
                android:textSize="16sp"
                android:text="Edit Measurements"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_background"
                android:hint="Body Weight (kg)"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#F2F2F2" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:height="38.10dp"
                android:background="@drawable/button_background"
                android:hint="Height (cm)"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#F2F2F2" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:height="38.10dp"
                android:background="@drawable/button_background"
                android:hint="Chest (cm)"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:height="38.10dp"
                android:background="@drawable/button_background"
                android:hint="Shoulder (cm)"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"


                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:height="38.10dp"
                android:background="@drawable/button_background"
                android:hint="Waist (cm)"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:height="38.10dp"
                android:background="@drawable/button_background"
                android:hint="Hips (cm)"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF" />


            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="3">




                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:height="38dp"
                    android:background="@drawable/button_background"
                    android:hint="Left Bicep (cm)"
                    android:paddingLeft="15dp"
                    android:paddingTop="10dp"
                    android:textAlignment="textStart"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#E4E4E4" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_columnWeight="1"
                    android:layout_marginTop="10dp"
                    android:height="38dp"
                    android:background="@drawable/button_background"
                    android:hint="Right Bicep (cm)"
                    android:paddingLeft="15dp"
                    android:paddingTop="10dp"
                    android:textAlignment="textStart"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#FFFFFF" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_columnWeight="1"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:height="38dp"
                    android:background="@drawable/button_background"
                    android:hint="Left Forearm (cm)"
                    android:paddingLeft="15dp"
                    android:paddingTop="10dp"


                    android:textAlignment="textStart"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#E4E4E4" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_columnWeight="1"
                    android:layout_marginTop="10dp"
                    android:height="38dp"
                    android:background="@drawable/button_background"
                    android:hint="Right Forearm (cm)"
                    android:paddingLeft="15dp"
                    android:paddingTop="10dp"
                    android:textAlignment="textStart"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#FFFFFF" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_columnWeight="1"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:height="38dp"
                    android:background="@drawable/button_background"
                    android:hint="Left Calf (cm)"
                    android:paddingLeft="15dp"
                    android:paddingTop="10dp"
                    android:textAlignment="textStart"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#E4E4E4" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_columnWeight="1"
                    android:layout_marginTop="10dp"
                    android:height="38dp"
                    android:background="@drawable/button_background"
                    android:hint="Right Calf (cm)"
                    android:paddingLeft="15dp"
                    android:paddingTop="10dp"
                    android:textAlignment="textStart"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#FFFFFF" />
            </GridLayout>

            <Button
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Save"
                app:cornerRadius="20sp"/>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>