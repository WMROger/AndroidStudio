<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/exercise_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="@color/black"
    app:cardCornerRadius="20dp"
    app:cardElevation="6dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dark_gray"
        android:paddingBottom="10dp">
        <!-- Exercise Icon -->
        <androidx.cardview.widget.CardView
            android:id="@+id/exercise_icon_card"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            app:cardBackgroundColor="#D9D9D9"
            app:cardCornerRadius="25dp"
            app:cardElevation="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/exercise_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/exercise_icon"
                android:layout_width="52dp"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@drawable/human_icon" />
        </androidx.cardview.widget.CardView>

        <!-- Exercise Name -->
        <TextView
            android:id="@+id/exercise_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:layout_marginTop="5dp"
            android:text="Bench Press"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/remove_exercise_button"
            app:layout_constraintStart_toEndOf="@+id/exercise_icon_card"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Exercise Category -->
        <TextView
            android:id="@+id/exercise_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:paddingStart="10dp"
            android:text="Chest"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/remove_exercise_button"
            app:layout_constraintStart_toEndOf="@+id/exercise_icon_card"
            app:layout_constraintTop_toBottomOf="@+id/exercise_name" />

        <!-- Remove Exercise Button -->

        <!-- Header Row for SET, REPS, DONE -->
        <ImageButton
            android:id="@+id/remove_exercise_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:background="@null"
            android:src="@drawable/ic_remove_exercise"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/white" />

        <LinearLayout
            android:id="@+id/linearLayout9"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_black"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/exercise_category">

            <!-- Set Label -->

            <!-- Reps Label -->
            <TextView
                android:id="@+id/set_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="SET"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/rep_label"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="REPS"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <!-- Done Label -->

            <TextView
                android:id="@+id/done_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="DONE"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </LinearLayout>

        <!-- Container for Dynamic Set Rows -->

        <!-- Add Set Button -->

        <Button
            android:id="@+id/add_set_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/custom_orange"
            android:layout_marginTop="10dp"
            android:text="Add Set"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sets_container"
            app:layout_constraintVertical_bias="1.0" />

        <LinearLayout
            android:id="@+id/sets_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-10dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout9" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
